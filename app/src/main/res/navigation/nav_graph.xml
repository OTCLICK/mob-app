<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardFragment">

    <fragment
        android:id="@+id/onboardFragment"
        android:name="com.example.mobapp.ui.fragments.OnboardFragment"
        android:label="OnboardFragment">
        <action
            android:id="@+id/action_onboard_to_signin"
            app:destination="@id/signInFragment" />
    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.mobapp.ui.fragments.SignInFragment"
        android:label="SignInFragment">
        <action
            android:id="@+id/action_signin_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signin_to_signup"
            app:destination="@id/signUpFragment" />
        <argument
            android:name="user"
            app:argType="com.example.mobapp.User"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.mobapp.ui.fragments.SignUpFragment"
        android:label="SignUpFragment">
        <action
            android:id="@+id/action_signup_to_signin"
            app:destination="@id/signInFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mobapp.ui.fragments.HomeFragment"
        android:label="HomeFragment" />

</navigation>